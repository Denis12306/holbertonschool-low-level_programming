#include "main.h"
#include <stdio.h>
/**
 * print_square - Write a function that prints a square, followed by a new line.
 * Where size is the size of the square
 * If size is 0 or less, the function should print only a new line
 * Return: void
 */
void print_square(int size)
{
	int s, i;

	if (size <= 0)
	{
	_putchar('\n');
	}
	for (s = 0; s < size; s++)
	{
	for (i = 0; i < size ; i++)
	{
	_putchar('#');
	}
	_putchar('\n');
	}
}
